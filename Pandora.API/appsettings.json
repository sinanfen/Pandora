{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"PandoraBoxDatabase": "Host=localhost;Port=5432;Database=PandoraBox;Username=postgres;Password=postgres;Include Error Detail=true"
    "PandoraBoxDatabase": "Host=${PGHOST};Port=${PGPORT};Database=${PGDATABASE};Username=${PGUSER};Password=${PGPASSWORD};Include Error Detail=true;SSL Mode=Require;Trust Server Certificate=true"

  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.PostgreSQL"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Host=localhost;Port=5432;Database=PandoraBox;Username=postgres;Password=postgres;Include Error Detail=true",
          "tableName": "Logs",
          "needAutoCreateTable": true,
          "columnOptions": {
            "message": {
              "Name": "Message",
              "Writer": "RenderedMessageColumnWriter"
            },
            "message_template": {
              "Name": "MessageTemplate",
              "Writer": "MessageTemplateColumnWriter"
            },
            "level": {
              "Name": "Level",
              "Writer": "LevelColumnWriter"
            },
            "time_stamp": {
              "Name": "TimeStamp",
              "Writer": "TimestampColumnWriter"
            },
            "exception": {
              "Name": "Exception",
              "Writer": "ExceptionColumnWriter"
            },
            "log_event": {
              "Name": "LogEvent",
              "Writer": "LogEventSerializedColumnWriter"
            },
            "user_name": {
              "Name": "UserName",
              "Writer": "UsernameColumnWriter"
            }
          }
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "K5Y3d6PAdA9DJ72WPS3Gg9R5ZGTPZndt3eg3nAjkxGk=",
    "Issuer": "https://localhost:7114/",
    "Audience": "PANDORA",
    "ExpiresInMinutes": 60
  }
}
